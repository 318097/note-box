{
  "name": "Note Box",
  "version": "1.0",
  "description": "A Notebook for every domain",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "page_action": {
    "default_popup": "build/popup/index.html"
  },
  "manifest_version": 2
}
